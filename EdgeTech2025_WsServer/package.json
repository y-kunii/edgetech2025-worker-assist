{
  "name": "raspberry-pi-websocket-server",
  "version": "1.0.0",
  "description": "WebSocket server for manufacturing digital twin system on Raspberry Pi",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node scripts/raspi-performance-test.js",
    "test:load": "node scripts/load-test.js",
    "lint": "eslint src --ext .ts",
    "prebuild": "rm -rf dist",
    "prepare": "npm run build",
    "deploy": "bash scripts/deploy.sh",
    "deploy:quick": "bash scripts/quick-deploy.sh",
    "deploy:service": "bash scripts/install-service.sh"
  },
  "keywords": [
    "websocket",
    "raspberry-pi",
    "manufacturing",
    "digital-twin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "socket.io": "^4.6.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "socket.io-client": "^4.6.0"
  }
}
